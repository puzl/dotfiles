font-0 = "Source Code Pro Semibold:size=14;1"
font-1 = "Font Awesome 5 Free:style=Solid:size=14;1"
font-2 = "Font Awesome 5 Brands:size=14;1"

modules-left = i3 title
modules-center = 
modules-right = 

tray-position = right
tray-padding =

