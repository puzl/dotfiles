[bar/globals]
monitor = ${env:MONITOR:fallback-value}
width = 100%
height = 30
radius = 0
fixed-center = false

background = ${colors.my_background}
foreground = ${colors.my_foreground}

line-size = 0
line-color =${colors.my_color5}

border-size = 0
border-color = ${colors.my_color5}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

#font-0 = "System San Francisco Display:size=16;1"
font-0 = "Overpass Mono Bold:size=16;1"
font-1 = "Font Awesome 5 Free:style=Solid:size=14;1"
font-2 = "Font Awesome 5 Brands:size=14;1"

cursor-click = pointer
cursor-scroll = ns-resize

[bar/main]
inherit = bar/globals
modules-left = i3 title
modules-center = date
modules-right = mpd musicinfo
tray-position = right
tray-padding = 10

[bar/side]
height = 26
inherit = bar/globals
modules-left = i3 title
modules-center = date
modules-right = 

[module/i3]
pin-workspaces = true
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = false

label-mode-padding = 2

label-focused = %index%
label-focused-background = ${colors.my_color7}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-background = ${colors.my_color0}
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${colors.my_color8}
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = #FF0000
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

date = " %Y-%m-%d"

time = "%H:%M"
format =%{A1:gnome-calendar:} ðŸ•“ <label> %{A}
format-prefix = ï€—
format-padding = 2

