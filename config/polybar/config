[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[module/title]
type = internal/xwindow

[module/musicinfo]
type = custom/script
exec = ~/.config/polybar/music.sh
interval = 3
format = <label>
label = %output:0:120:...%
format-padding = 10
click-left =  i3-msg scratchpad show

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600
#password = mysecretpassword

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2
