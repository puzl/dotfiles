cursor-scroll = ns-resize

[module/i3]
pin-workspaces = true
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.my_color13}
label-mode-background = ${colors.my_color14}

label-focused = %index%
label-focused-background = ${colors.my_color5}
label-focused-foreground = ${colors.my_foreground}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-background = ${colors.my_color9}
label-unfocused-foreground = ${colors.my_foreground}
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${colors.my_color7}
label-visible-foreground = ${colors.my_color5}
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = #BA2922
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = ï€—
format-foreground = ${colors.my_foreground}
format-background = ${colors.my_color5}
format-padding = 2

label = %date% %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[module/title]
type = internal/xwindow

[module/musicinfo]
type = custom/script
exec = ~/.config/polybar/music.sh
interval = 5
format = <label>
label = %output:0:120:...%
format-padding = 10
format-foreground = ${colors.my_foreground}

